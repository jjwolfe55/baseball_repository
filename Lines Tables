CREATE TABLE lines_games(
game_id VARCHAR(15), 
v_team_id VARCHAR(3),
h_team_id VARCHAR(3),
ballpark VARCHAR(7),
game_date INT,
game_count TINYINT,
start_time VARCHAR(10),
day_time CHAR(8),
planned_inn TINYINT,
tiebreaker TINYINT,
use_dh CHAR(5),
h_team_bf CHAR(5),
game_time SMALLINT,
attendance INT,
field_condition CHAR(15),
precipitation CHAR(15),
sky_condition CHAR(15),
temp SMALLINT,
wind_direction CHAR(15),
wind_speed TINYINT,
official_scorer VARCHAR(9),
forfeit CHAR(1),
ump_hp VARCHAR(9),
ump1b VARCHAR(9),          
ump2b VARCHAR(9),           
ump3b VARCHAR(9),           
umplf VARCHAR(9),           
umprf VARCHAR(9),
wp VARCHAR(9),
lp VARCHAR(9),
save VARCHAR(9),
game_type VARCHAR(15),
v_team_runs TINYINT,
h_team_runs TINYINT,
winning_team VARCHAR(3),
losing_team VARCHAR(3),
line CHAR(1),
batteries CHAR(1),
lineups CHAR(1),
box_score CHAR(1),
play_by_play CHAR(1),
season_id SMALLINT,
PRIMARY KEY (game_id)
);



CREATE TABLE lines_batting (
game_id VARCHAR(15),
player_id VARCHAR(9),
team_id VARCHAR(3),
b_lineup TINYINT,
b_sequence TINYINT,
integrity CHAR(8),
b_pa TINYINT,
b_ab TINYINT,
b_r TINYINT,
b_h TINYINT,
b_d TINYINT,
b_t TINYINT,
b_hr TINYINT,
b_rbi TINYINT,
b_sh TINYINT,
b_sf TINYINT,
b_hbp TINYINT,
b_bb TINYINT,
b_ibb TINYINT,
b_so TINYINT,
b_sb TINYINT,
b_cs TINYINT,
b_gdp TINYINT,
b_ci TINYINT,
b_roe TINYINT,
b_dh TINYINT,
b_ph TINYINT,
b_pr TINYINT,
game_date INT,
game_count TINYINT,
ballpark VARCHAR(7),
opponent VARCHAR(3),
win_loss CHAR(2),
game_type VARCHAR(15),
box_score CHAR(2),
PRIMARY KEY (game_id,player_id,team_id)
);

