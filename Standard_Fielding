CREATE TABLE standard_fielding (
player_id VARCHAR(9),
player_name VARCHAR(45),
team_id VARCHAR(3),
season_id SMALLINT,
age SMALLINT,
throw CHAR(1),
d_pos VARCHAR(2),
d_g SMALLINT,
d_gs SMALLINT,
d_inn DECIMAL(6,1),
d_po SMALLINT,
d_a SMALLINT, 
d_e SMALLINT,
d_dp SMALLINT,
d_tp SMALLINT,
d_pb SMALLINT,       
d_wp SMALLINT,         
d_sb SMALLINT,            
d_cs SMALLINT,             
PRIMARY KEY (player_id,team_id,season_id,d_pos)
);

INSERT INTO standard_fielding (
player_id,
player_name,
team_id,
season_id,
age,
throw,
d_pos,
d_g,
d_gs,
d_inn,
d_po,
d_a, 
d_e, 
d_dp,
d_tp,
d_pb,        
d_wp,          
d_sb,            
d_cs
)
SELECT DISTINCT(a.player_id) AS player_id,
 CONCAT(b.first_name,' ',b.last_name) AS player_name,
 a.team_id AS team_id, 
 SUBSTRING(a.game_date,1,4) AS season_id,
 TIMESTAMPDIFF(YEAR,CONVERT(f.birth_date, DATE), CONVERT(e.age_date, DATE)) as age,
 b.throw AS throw,
 d.d_pos_id AS d_pos,
 c.d_g AS d_g, 
 c.d_gs AS d_gs, 
 c.d_inn AS d_inn,
 c.d_po AS d_po,
 c.d_a AS d_a,
 c.d_e AS d_e,
 c.d_dp AS d_dp,
 c.d_tp AS d_tp,
 c.d_pb AS d_pb,
 c.d_wp AS d_wp,
 c.d_sb AS d_sb,
 c.d_cs AS d_cs
FROM lines_fielding AS a
LEFT JOIN lines_rosters AS b
ON a.player_id = b.player_id  AND a.team_id = b.team_id
INNER JOIN 
(SELECT DISTINCT(a.player_id) AS player_id,
a.team_id AS team_id,
a.game_id AS game_id,
SUBSTRING(a.game_date,1,4) AS season_id,
COUNT(a.player_id) AS d_g,
SUM(a.d_gs) AS d_gs,
(SUM(a.d_ifouts)/3) AS d_inn,
SUM(a.d_po) AS d_po,
SUM(a.d_a) AS d_a,
SUM(a.d_e) AS d_e,
SUM(a.d_dp) AS d_dp,
SUM(a.d_tp) AS d_tp,
SUM(a.d_pb) AS d_pb,
SUM(a.d_wp) AS d_wp,
SUM(a.d_sb) AS d_sb,
SUM(a.d_cs) AS d_cs
FROM lines_fielding AS a
WHERE a.integrity = 'Value' AND a.game_type = 'regular' 
GROUP BY a.player_id,a.team_id,SUBSTRING(a.game_date,1,4),a.d_pos) AS c
ON a.player_id = c.player_id  AND a.team_id = c.team_id AND a.game_id = c.game_id
INNER JOIN lookup_fielding_positions AS d
ON a.d_pos = d.d_pos
LEFT JOIN lines_player_bio AS f
ON a.player_id = f.player_id
INNER JOIN lookup_age_date AS e
ON SUBSTRING(a.game_date,1,4) = e.season_id
WHERE a.integrity = 'Value' AND a.game_type = 'regular' 
GROUP BY a.player_id,a.team_id,SUBSTRING(a.game_date,1,4),a.d_pos;
